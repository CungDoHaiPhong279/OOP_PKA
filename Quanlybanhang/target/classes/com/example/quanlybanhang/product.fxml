<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22" fx:controller="com.example.quanlybanhang.ProductController">

    <!-- Padding cho VBox -->
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <!-- Bảng quản lý sản phẩm -->
    <TableView fx:id="productTable" prefHeight="400" prefWidth="600">
        <columns>
            <TableColumn fx:id="idColumn" text="Mã Sản Phẩm" />
            <TableColumn fx:id="nameColumn" text="Tên Sản Phẩm" />
            <TableColumn fx:id="priceColumn" text="Giá" />
            <TableColumn fx:id="quantityColumn" text="Số Lượng" />
            <TableColumn fx:id="ratingColumn" text="Đánh Giá" />
        </columns>
    </TableView>

    <!-- Các trường nhập liệu cho sản phẩm -->
    <TextField fx:id="productIdField" promptText="Mã Sản Phẩm" />
    <TextField fx:id="productNameField" promptText="Tên Sản Phẩm" />
    <TextField fx:id="productPriceField" promptText="Giá" />
    <TextField fx:id="productQuantityField" promptText="Số Lượng" />
    <TextField fx:id="productRatingField" promptText="Đánh Giá" />

    <!-- Các nút Thêm, Sửa, Xóa -->
    <HBox spacing="10">
        <Button onAction="#addProduct" text="Thêm Sản Phẩm" />
        <Button onAction="#editProduct" text="Sửa Sản Phẩm" />
        <Button onAction="#deleteProduct" text="Xóa Sản Phẩm" />
        <Button text="Chuyển sang Order" onAction="#goToOrder"/>
    </HBox>
</VBox>
